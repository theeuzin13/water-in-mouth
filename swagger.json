  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "description": "Use o token JWT no formato: Bearer {token}"
      }
    },
    "schemas": {
      "LoginDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "theeuzin13",
            "description": "Nome de usuário para login."
          },
          "password": {
            "type": "string",
            "example": "1234",
            "minLength": 4,
            "description": "Senha do usuário (mínimo 4 caracteres)."
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "theeuzin13",
            "description": "Nome de usuário único."
          },
          "password": {
            "type": "string",
            "example": "1234",
            "minLength": 4,
            "description": "Senha do usuário. Deve conter no mínimo 4 caracteres."
          },
          "role": {
            "type": "string",
            "example": "admin",
            "description": "Role do usuário no sistema.",
            "enum": [
              "admin",
              "employee"
            ]
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "UpdateUserDto": {
        "type": "object",
        "properties": {}
      },
      "CreateProductDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Pizza Pepperoni",
            "description": "Nome do produto."
          },
          "price": {
            "type": "number",
            "example": 49.9,
            "description": "Preço do produto."
          }
        },
        "required": [
          "name",
          "price"
        ]
      },
      "UpdateProductDto": {
        "type": "object",
        "properties": {}
      },
      "CreateOrderDto": {
        "type": "object",
        "properties": {
          "productsIds": {
            "example": [
              "2d57f8d3-71d7-4938-85c5-2b7c0901cfc4",
              "ae62fd35-e1e7-4213-84e8-00f82b92f305"
            ],
            "description": "IDs dos produtos que farão parte do pedido.",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "productsIds"
        ]
      },
      "UpdateOrderDto": {
        "type": "object",
        "properties": {
          "productsIds": {
            "example": [
              "2d57f8d3-71d7-4938-85c5-2b7c0901cfc4",
              "ae62fd35-e1e7-4213-84e8-00f82b92f305"
            ],
            "description": "Lista atualizada de IDs dos produtos que pertencem ao pedido.",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
